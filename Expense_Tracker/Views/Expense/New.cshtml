@model Expense_Tracker.Models.ViewModels.NewExpense
@{
    ViewBag.Title = "New Expense";
}

<div class="navlink">
    <a href="/Expense/List">Back to Expense</a>
</div>

<div>
    <h1>New Expense</h1>
</div>

<form action="/Expense/Create" method="POST">
    <div>
        <label>Date:</label> <input type="date" name="ExpenseDate" />
    </div>
    <div>
        <label>Description:</label> <input type="text" name="ExpenseDescription" />
    </div>
    <div>
        <label>Amount: $</label> <input type="number" step="0.01" name="ExpenseAmount" />
    </div>
    <div>
        <label>Member:</label>
        <select name="MemberID">
            @foreach (var member in Model.AllMembers)
            {
                <option value="@member.MemberID">@member.MemberName</option>
            }
        </select>
    </div>
    <div>
        <label>Category:</label>
        <select name="CategoryID">
            @foreach (var category in Model.AllCategories)
            {
                <option value="@category.CategoryID">@category.CategoryName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add Expense" />

    </div>
</form>