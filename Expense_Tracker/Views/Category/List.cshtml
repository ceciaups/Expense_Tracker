@model IEnumerable<Expense_Tracker.Models.CategoryDto>
@{
    ViewBag.Title = "Category";
}

<div class="navlink">
</div>

<div>
    <h1>Category List</h1>
</div>
<a href="/Category/New" class="button button-general">New Category</a>
<table id="table-category" class="display">
    <thead>
        <tr>
            <th>Category</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td><a href="/Category/Edit/@category.CategoryID" class="button button-edit">Edit</td>
                <td><a href="/Category/DeleteConfirm/@category.CategoryID" class="button button-delete">Delete</td>
            </tr>
        }
    </tbody>
</table>